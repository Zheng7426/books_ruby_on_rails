
<header>
  <div class="container">
    <h1>Best-seller List for <%= @list_name %></h1>
  </div>
</header>
<% @lists.each do |list| %>
<table>
    <div class="book container">
      <div class="row">
          <div class="col-sm-3 col-md-1 col-lg-1">
            <p class="rank-this-week"><%= list['rank'] %></p>
          </div>
          <div class="col-sm-7 col-md-3 col-lg-3">
            <figure class="figure">
              <%= image_tag(list['book_image'], class: "img-fluid") %>
            </figure>
          </div>
          <div class="book-content col-sm-12 col-md-8 col-lg-8">
            <p class="title"><%= list['title'] %></p>
            <p class="author"><%= list['author'] %></p>
            <p class="description"><%= list['description'] %></p>
            <p class="weeks-on-list"><%= list['weeks_on_list'] %>&nbsp;weeks on list</p>

            <%= link_to "See all reviews", book_path(list['title']+'='+list['author']+'='+list['publisher'].gsub('.', '')) %>
          </div>
      </div>
    </div>
</table>
<% end %>
